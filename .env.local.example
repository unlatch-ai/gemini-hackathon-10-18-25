# Gemini API Key
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3001
BASE_URL=https://your-ngrok-url.ngrok.io

# Twilio Configuration (Required)
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Safety Configuration
# The panic codeword that triggers emergency calls
PANIC_CODEWORD=help me mom

# Optional: User's phone number for receiving emergency calls
USER_PHONE_NUMBER=+1234567890

# Optional: Python service configuration
PYTHON_SERVICE_URL=http://localhost:5000

# Optional: Session storage
DATABASE_URL=postgresql://localhost:5432/safety_app
REDIS_URL=redis://localhost:6379
